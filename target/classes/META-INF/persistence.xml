<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="jakarta.persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="jakarta.persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="JPA1PU" transaction-type="RESOURCE_LOCAL">
    
    <class>jpa1.entities.Pupil</class>

    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres" />
      <property name="hibernate.connection.username" value="postgres" />
      <property name="hibernate.connection.password" value="DBI123" />
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>
